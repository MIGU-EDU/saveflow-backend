page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  padding: 30rpx 30rpx 80rpx;
}

/* 标题样式 */
.title-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 卡片样式 */
.card {
  width: 650rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.icon-wrapper {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-content {
  margin-bottom: 20rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 标签样式 */
.tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

/* 团队成员样式 */
.team-list {
  margin-top: 10rpx;
}

.team-member {
  display: flex;
  padding: 20rpx 0;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.avatar-text {
  font-size: 32rpx;
  color: #999;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.member-role {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
  display: block;
}

.member-skills {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 10rpx 0;
}

/* 感谢文字 */
.thank-you {
  text-align: center;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #666;
}

/* 版本信息 */
.version {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}